---
driver:
  name: vagrant
  provider: vmware_fusion
  customize:
      memory: 2048

provisioner:
  name: chef_zero
  data_path: test/shared
  require_chef_omnibus: 12.8.1-1

platforms:
  - name: el_capitan
    driver:
      provider: vmware_fusion
      box: yts/el_capitan
      box_url: http://vagrant.ytsla.com/vagrant/el_capitan
  - name: yosemite
    driver:
      provider: vmware_fusion
      box: yts/yosemite
      box_url: http://vagrant.ytsla.com/vagrant/yosemite
  - name: mavericks
    driver:
      provider: vmware_fusion
      box: yts/mavericks
      box_url: http://vagrant.ytsla.com/vagrant/mavericks
